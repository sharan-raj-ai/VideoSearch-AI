# Semantic Video Search - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# REQUIRED: Google Gemini API Key
# ===========================================
# Get your free API key from: https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# Infrastructure (defaults work with docker-compose)
# ===========================================
QDRANT_HOST=localhost
QDRANT_PORT=6333
REDIS_HOST=localhost
REDIS_PORT=6379

# ===========================================
# Application Settings
# ===========================================
# Maximum video file size in MB
MAX_VIDEO_SIZE_MB=500

# Frames per second to extract (1 = one frame per second)
FRAME_EXTRACTION_FPS=1

# Minimum search score threshold (0-1)
MIN_SEARCH_SCORE=0.5

# ===========================================
# Logging
# ===========================================
LOG_LEVEL=INFO
